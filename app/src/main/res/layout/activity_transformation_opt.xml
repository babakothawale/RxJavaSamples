<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.java.rx.TransformationOptActivity">

    <TextView
        android:id="@+id/textview_data"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textview_result"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="result"
        android:textSize="20sp"
        android:textAlignment="center"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textview_data" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textview_result">
        >

        <LinearLayout
            android:id="@+id/button_list"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_horizontal"
            android:layout_margin="16dp"
            android:orientation="vertical">

            <Button
                android:id="@+id/button_map"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Map"
                />

            <Button
                android:id="@+id/button_flatmap"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="FlatMap"
                />

            <Button
                android:id="@+id/button_switchmap"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="SwitchMap"
                />
            <Button
                android:id="@+id/button_concatmap"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="ConcatMap"
                />

            <Button
                android:id="@+id/button_buffer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Buffer"
                />

        </LinearLayout>
    </ScrollView>



</android.support.constraint.ConstraintLayout>